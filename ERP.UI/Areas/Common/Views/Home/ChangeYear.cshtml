@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Change Financial Year";
}

<h1>Change Financial Year</h1>
<div class="row">
    <div class="col-lg-12">
        <table id="financialYearlistgrid" class="table table-striped table-bordered" style="width: 100%;">
            <thead>
                <tr>
                    <th>Financial Year Id</th>
                    <th>Financial Year Name</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#financialYearlistgrid").DataTable({
            "pageLength": 20,
            "bPaginate": true,
            "ajax": {
                "url": "@Url.Action("GetFinancialYearList", "Home")",
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                { "data": "FinancialYearId", "name": "FinancialYear Id" },
                { "data": "FinancialYearName", "name": "FinancialYear Name" },
                {
                    "render": function (data, type, full, meta) {
                        return '<div class="action_button">' +
                            '<button type="button" onclick="javascript: fnSelectFinancialYear(' + full.FinancialYearId + ')">Select</button>' +
                            '</div>';
                    }
                }
            ],
        });
    });

    // choose financial year.
    function fnSelectFinancialYear(financialYearId) {
        var model = { financialYearId: financialYearId };
        AjaxCommunication.CreateRequest(this.window, 'Post', '@Url.Action("ChooseFinancialYear", "Home")', '', model,
            function (data) {
                window.location.href = '@Url.Action("Index", "Home")';
        }, null, true, null, false);
    }
</script>
