@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Change Financial Year";
}

<div class="container">
    <div class="row  mb-2">
        <div class="col-sm-6">
            <a class="h5 text-info" asp-area="Common" asp-controller="Home" asp-action="ChangeYear">Change Financial Year</a>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-sm-12 table-responsive">
        <table id="financialYearlistgrid" class="table table-sm table-striped table-bordered table-hover">
            <thead>
                <tr class="table-header">
                    <th></th>
                    @*<th>Financial Year Id</th>*@
                    <th>Financial Year Name</th>

                </tr>
            </thead>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#financialYearlistgrid").DataTable({
            "pageLength": 10,
            "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
            "bPaginate": false,
            "searching": false,
            "bInfo": false,
            "ajax": {
                "url": "@Url.Action("GetFinancialYearList", "Home")",
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                {
                    "render": function (data, type, full, meta) {
                        return '<div class="action_button">' +
                            '<button class="border-0 rounded-0 text-success" type="button" onclick="javascript: fnSelectFinancialYear(' + full.FinancialYearId + ')"><i class="far fa-check-square"></i></button>' +
                            '</div>';
                    }, "orderable": false, "width": "40px"
                },
                /*{ "data": "FinancialYearId", "name": "FinancialYear Id" },*/
                { "data": "FinancialYearName", "name": "FinancialYear Name" }
                
            ],
        });
    });

    // choose financial year.
    function fnSelectFinancialYear(financialYearId) {
        var model = { financialYearId: financialYearId };
        AjaxCommunication.CreateRequest(this.window, 'Post', '@Url.Action("ChooseFinancialYear", "Home")', '', model,
            function (data) {
                window.location.href = '@Url.Action("Index", "Home")';
        }, null, true, null, false);
    }
</script>
