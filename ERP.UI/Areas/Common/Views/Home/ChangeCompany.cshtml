@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Change Company";
}

<div class="container">
    <div class="row  mb-2">
        <div class="col-sm-6">
            <a class="h5 text-info" asp-area="Common" asp-controller="Home" asp-action="ChangeCompany">Change Company</a>
        </div>
        
    </div>
</div>
<div class="row">
    <div class="col-sm-12 table-responsive">
        <table id="companylistgrid" class="table table-sm table-striped table-bordered table-hover">
            <thead>
                <tr class="table-header">
                    <th>Select</th>
                    @*<th>Company Id</th>*@
                    <th>Company Name</th>

                </tr>
            </thead>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#companylistgrid").DataTable({
            "pageLength": 10,
            "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
            "bPaginate": false,
            "searching": false,
            "bInfo": false,
            "ajax": {
                "url": "@Url.Action("GetCompanyList", "Home")",
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                {
                    "render": function (data, type, full, meta) {
                        return '<div class="action_button">' +
                            '<button  class="border-0 rounded-0 text-success" type="button" onclick="javascript: fnSelectCompany(' + full.CompanyId + ')"><i class="far fa-check-square"></i></button>' +
                            '</div>';
                    }, "orderable": false, "width": "40px"
                },
                //{ "data": "CompanyId", "name": "Company Id" },
                { "data": "CompanyName", "name": "Company Name" }
            ],
        });
    });

    // choose company.
    function fnSelectCompany(companyId) {
        var model = { companyId: companyId };
        AjaxCommunication.CreateRequest(this.window, 'Post', '@Url.Action("ChooseCommpany", "Home")', '', model,
            function (data) {
                window.location.href = '@Url.Action("Index", "Home")';
        }, null, true, null, false);
    }
</script>
