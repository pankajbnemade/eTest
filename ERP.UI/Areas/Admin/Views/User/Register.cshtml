@model RegisterModel
@{ ViewData["Title"] = "Register"; }

<div class="register-box">
    <div class="register-logo">
        <a href="#"><b>e</b>Test</a>
    </div>
    <div class="card">
        <div class="card-body register-card-body">
            <h4 class="login-box-msg">Register a new membership</h4>
            <form method="post">
                <input type="hidden" asp-for="ReturnUrl">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@

                <div class="row">
                    <div class="form-group col-sm-12">
                        <div class="input-group">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-12">
                        <div class="input-group">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-12">
                        <div class="input-group">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

