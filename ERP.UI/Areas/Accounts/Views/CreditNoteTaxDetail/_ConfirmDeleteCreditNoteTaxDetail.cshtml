<div class="modal fade" id="modalConfirmCreditNoteTaxDetail" role="dialog" data-backdrop="static" data-keyboard="true" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close btn-default" data-dismiss="modal" aria-label="Close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" title="Back"><i class="fas fa-arrow-left"></i> Back</button>
                <button type="button" class="btn btn-danger" id="delete-creditnote-tax-detail" title="Delete"><i class="fas fa-trash-alt"></i> Delete</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    // remove element button click.
    var _creditNoteDetTaxId = null;
    function fnDeleteCreditNoteTaxDetail(element, creditNoteDetTaxId) {
        _creditNoteDetTaxId = creditNoteDetTaxId;
        $(element).attr("data-target", "#modalConfirmCreditNoteTaxDetail");

        $('#modalConfirmCreditNoteTaxDetail').on('show.bs.modal', function (e) {
            // Pass form reference to modal for submission on yes/ok
            var form = $(e.relatedTarget).closest('form');
            $(this).find('.modal-footer #modalConfirmCreditNoteTaxDetail').data('form', form);
        });
    }

    // form confirm (yes/ok) handler, submits form
    $('#modalConfirmCreditNoteTaxDetail').find('.modal-footer #delete-creditnote-tax-detail').on('click', function () {
        var model = { creditNoteDetTaxId: _creditNoteDetTaxId };
        AjaxCommunication.CreateRequest(this.window, 'Post', '@Url.Action("DeleteCreditNoteTaxDetail", "CreditNoteTaxDetail")', '', model,
        function (data) {
            if (data.Result.Status) {
                $('#modalConfirmCreditNoteTaxDetail').modal('hide');
                $('#creditNoteTaxDetailGrid').DataTable().ajax.reload();
                $("#creditNoteDetailGrid").DataTable().clear().ajax.reload();
                fnSuccessNotify('Record deleted.');
            }
            else {
                fnDangerNotify('Error occured while processing request.');
            }
        }, null, true, null, false);
    });

</script>
