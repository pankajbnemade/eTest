
<div class="row py-md-4">
    <div class="col-sm-12">
        <table id="salesInvoiceTaxDetailGrid" class="table table-striped table-bordered" style="width: 100%;">
            <thead>
                <tr>
                    <th>InvoiceDetTaxId</th>
                    <th>InvoiceDetId</th>
                    <th>SrNo</th>
                    <th>TaxLedgerName</th>
                    <th>TaxPercentageOrAmount</th>
                    <th>TaxPerOrAmountFc</th>
                    <th>TaxAddOrDeduct</th>
                    <th>TaxAmountFc</th>
                    <th>Remark</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#salesInvoiceTaxDetailGrid").DataTable({
            "pageLength": 20,
            "dom": "<'row'<'col-sm-6'><'col-sm-6'f>>" +
                "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-4'i><'col-sm-4 text-center'l><'col-sm-4'p>>",
            "bPaginate": true,
            "scrollX": true,
            "ajax": {
                "url": "@Url.Action("GetSalesInvoiceTaxDetailList", "SalesInvoiceTaxDetail", new { invoiceDetId = ViewBag.InvoiceDetId })",
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                { "data": "InvoiceTaxId", "name": "InvoiceTaxId", "visible": false },
                { "data": "InvoiceDetId", "name": "InvoiceDetId", "visible": false },
                { "data": "SrNo", "name": "SrNo" },
                { "data": "TaxLedgerName", "name": "TaxLedgerName" },
                { "data": "TaxPercentageOrAmount", "name": "TaxPercentageOrAmount" },
                { "data": "TaxPerOrAmountFc", "name": "TaxPerOrAmountFc" },
                { "data": "TaxAddOrDeduct", "name": "TaxAddOrDeduct" },
                { "data": "TaxAmountFc", "name": "TaxAmountFc" },
                { "data": "Remark", "name": "Remark" },
                {
                    "render": function (data, type, full, meta) {
                        return '<div class="action_button">' +
                            '<button type="button" onclick="javascript: fnEditInvoiceTaxMaster(' + full.CityId + ')">Edit</button>' +
                            '<button type="button" data-toggle="modal" onclick="javascript: fnDeleteInvoiceTaxMaster(this, ' + full.CityId + ')">Delete</button>' +
                            '</div>';
                    }
                }
            ],
        });
    });
</script>