<div class="modal fade" id="modalConfirmAttachment" role="dialog" data-backdrop="static" data-keyboard="true" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close btn-default" data-dismiss="modal" aria-label="Close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" title="Back"><i class="fas fa-arrow-left"></i> Back</button>
                <button type="button" class="btn btn-danger" id="delete-attachment" title="Delete"><i class="fas fa-trash-alt"></i> Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    // remove element button click.
    var _associationId = null;
    function fnDeleteAttachment(element, associationId) {
        _associationId = associationId;

        console.log(_associationId);

        $(element).attr("data-target", "#modalConfirmAttachment");

        $('#modalConfirmAttachment').on('show.bs.modal', function (e) {
            // Pass form reference to modal for submission on yes/ok
            var form = $(e.relatedTarget).closest('form');
            $(this).find('.modal-footer #modalConfirmAttachment').data('form', form);
        });
    }

    // form confirm (yes/ok) handler, submits form
    $('#modalConfirmAttachment').find('.modal-footer #delete-attachment').on('click', function () {
        var model = { associationId: _associationId };
        console.log(model);

        AjaxCommunication.CreateRequest(this.window, 'Post', '@Url.Action("DeleteAttachment", "PaymentVoucherAttachment")', '', model,
        function (data) {
            if (data.Result.Status) {
                $('#modalConfirmAttachment').modal('hide');
                $('#attachmentGrid').DataTable().ajax.reload();
                fnSuccessNotify('Record deleted.');
            }
            else {
                fnDangerNotify('Error occured while processing request.');
            }
            }, function (XMLHttpRequest, textStatus, errorThrown) {
                alert("some error");
            }, true, null, false);
    });

</script>
