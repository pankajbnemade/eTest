<script type="text/javascript">
    $(document).ready(function () {

    });

    // edit invoice master.
    function fnEditInvoiceMaster(purchaseInvoiceId) {
        var model = { purchaseInvoiceId: purchaseInvoiceId };
        AjaxCommunication.CreateRequest(this.window, 'Get', '@Url.Action("EditInvoiceMaster", "PurchaseInvoice")', 'html', model,
        function (data) {
            $('#modal-invoice').empty();
            $('#modal-invoice').html(data).modal('show');
            return false;
        }, null, true, null, false);
    }


</script>
