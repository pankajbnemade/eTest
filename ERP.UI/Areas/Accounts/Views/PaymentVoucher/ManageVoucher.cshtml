    ViewBag.Title = "Manage Voucher";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Payment Voucher</h1>
            </div>
            <div class="col-sm-6">
                <button type="button" class="btn btn-secondary float-right" title="Back" onclick="javascript: fnBackToIndex();">
