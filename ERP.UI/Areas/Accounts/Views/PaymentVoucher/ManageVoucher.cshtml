                </button>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary card-outline card-outline-tabs">
                    <div class="card-header p-0 border-bottom-0">
                        <ul class="nav nav-tabs" id="tab-list" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" id="master-tab" data-toggle="tab" href="#vouchermaster" role="tab" aria-controls="vouchermaster" aria-selected="true">Master</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="detail-tab" data-toggle="tab" href="#voucherdetail" role="tab" aria-controls="voucherdetail" aria-selected="false">Detail</a>
                            </li>
                            @*<li class="nav-item">
                                <a class="nav-link" id="tax-master-tab" data-toggle="tab" href="#vouchertaxmaster" role="tab" aria-controls="vouchertaxmaster" aria-selected="false">Tax Master</a>
                            </li>*@
                            @*<li class="nav-item">
                                <a class="nav-link" id="summary-tab" data-toggle="tab" href="#vouchersummary" role="tab" aria-controls="vouchersummary" aria-selected="false">Summary</a>
                            </li>*@
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="vouchermaster" role="tabpanel" aria-labelledby="master-tab"></div>
                            <div class="tab-pane fade" id="voucherdetail" role="tabpanel" aria-labelledby="detail-tab"></div>
                            @*<div class="tab-pane fade" id="vouchertaxmaster" role="tabpanel" aria-labelledby="tax-master-tab"></div>
                            <div class="tab-pane fade" id="vouchersummary" role="tabpanel" aria-labelledby="summary-tab"></div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="modal-voucher" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="true"></div>
<div id="modal-voucher-detail" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="true"></div>

@*@{ await Html.RenderPartialAsync("~/Areas/Accounts/Views/PaymentVoucherTaxDetail/_ConfirmDeleteVoucherTaxDetail.cshtml"); }*@

<script type="text/javascript">
    $(document).ready(function () {
        $('#tab-list li:first-child a').tab('show');
    });

        // back to index voucher.
    function fnBackToIndex() {
        window.location.href = '@Url.Action("Index", "PaymentVoucher")';
    }

    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        //console.log(e.target.id);// newly activated tab
        //console.log(e.relatedTarget); // previous active tab
        var tabPanel = $(e.target).attr('aria-controls'), tabUrl = null;
        switch ($(e.target).attr('aria-controls')) {
            case 'vouchermaster':
                tabUrl = '@Url.Action("ViewVoucherMaster", "PaymentVoucher", new { paymentVoucherId = ViewBag.PaymentVoucherId })';
                break;
            case 'voucherdetail':
                tabUrl = '@Url.Action("VoucherDetail", "PaymentVoucherDetail", new { paymentVoucherId = ViewBag.PaymentVoucherId })';
                break;
            @*case 'vouchertaxmaster':
                tabUrl = '@Url.Action("VoucherTaxMaster", "PaymentVoucherTaxMaster", new { paymentVoucherId = ViewBag.PaymentVoucherId })';
                break;*@
            @*case 'vouchersummary':
                tabUrl = '@Url.Action("ViewVoucherSummary", "PaymentVoucher", new { paymentVoucherId = ViewBag.PaymentVoucherId })';
                break;*@
            default:
                break;
        }
        $('#' + tabPanel).empty();
        $('#' + tabPanel).load(tabUrl);
    });
</script>
