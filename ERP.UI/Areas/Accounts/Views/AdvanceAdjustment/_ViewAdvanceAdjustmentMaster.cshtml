@model AdvanceAdjustmentModel

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.AdvanceAdjustmentNo, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.AdvanceAdjustmentNo)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.AdvanceAdjustmentDate, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.AdvanceAdjustmentDate)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.StatusId, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.StatusName)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.ParticularLedgerId, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.ParticularLedgerName)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.CurrencyId, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.CurrencyCode)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.ExchangeRate, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.ExchangeRate)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.VoucherNo, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.VoucherNo, new { @class = "form-control form-control-sm" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.VoucherAvailableAmountFc, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.VoucherAvailableAmountFc, new { @class = "form-control form-control-sm" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.AmountFc, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.AmountFc, new { @class = "form-control form-control-sm" })
                </div>
            </div>

        </div>
       
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.Narration, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.Narration)
                </div>
            </div>
            <div class="col-sm-8">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.AmountFcInWord, new { @class = "font-weight-bold" }) :
                    @Html.DisplayFor(model => model.AmountFcInWord)
                </div>
            </div>
        </div>
       
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        //$('.decimal-two-scale').autoNumeric('init', { vMin: '-999999999999999.999', vMax: '999999999999999.999' });
    });

    // edit advanceAdjustment master.
    function fnEditAdvanceAdjustmentMaster(advanceAdjustmentId) {
        var model = { advanceAdjustmentId: advanceAdjustmentId };
        AjaxCommunication.CreateRequest(this.window, 'Get', '@Url.Action("EditAdvanceAdjustmentMaster", "AdvanceAdjustment")', 'html', model,
        function (data) {
            $('#modal-advanceadjustment').empty();
            $('#modal-advanceadjustment').html(data).modal('show');
            return false;
        }, null, true, null, false);
    }

</script>
