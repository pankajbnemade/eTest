                <div class="form-group">
                    @Html.DisplayNameFor(model => model.PaymentTerm)
                    @Html.DisplayFor(model => model.PaymentTerm)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.BankLedgerId)
                    @Html.DisplayFor(model => model.BankLedgerName)
                </div>
