            <div class="col-sm-4">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Remark)
                    @Html.DisplayFor(model => model.Remark)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.TaxModelType)
                    @Html.DisplayFor(model => model.TaxModelType)
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.TaxRegisterId)
                    @Html.DisplayFor(model => model.TaxRegisterName)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.CurrencyId)
                    @Html.DisplayFor(model => model.CurrencyName)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.ExchangeRate)
                    @Html.DisplayFor(model => model.ExchangeRate)
                </div>
