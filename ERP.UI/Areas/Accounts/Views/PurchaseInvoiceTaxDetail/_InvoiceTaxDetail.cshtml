                                    </button>

                                </th>
                                <th>PurchaseInvoiceDetTaxId</th>
                                <th>PurchaseInvoiceDetId</th>
                                <th>Sr No</th>
                                <th>Tax Ledger</th>
                                <th>Per / Amount</th>
                                <th>Tax Per Or Amount FC</th>
                                <th>Add or Deduct</th>
                                <th>Tax Amount FC</th>
                                <th>Remark</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#purchaseInvoiceTaxDetailGrid").DataTable({
            "pageLength": 25,
            "paging": false,
            "searching": false,
            "info": false,
            "dom": "<'row'<'col-sm-6'l><'col-sm-6'f>>" +
                "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-4'i><'col-sm-4 text-center'><'col-sm-4'p>>",
            "bPaginate": true,
            //"scrollX": true,
            "ajax": {
                "url": "@Url.Action("GetPurchaseInvoiceTaxDetailList", "PurchaseInvoiceTaxDetail", new { PurchaseInvoiceDetId = ViewBag.PurchaseInvoiceDetId })",
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                {
                    "orderable": false,
                    "render": function (data, type, full, meta) {
                        return '<div class="action_button">' +
                            '<button type="button" class="border-0 rounded-0 text-success" title="Edit" onclick="javascript: fnEditInvoiceTaxDetail(' + full.PurchaseInvoiceDetTaxId + ')"><span class="fa fa-pencil-alt"></span></button>' +
                            '<button type="button" class="border-0 rounded-0 text-danger" title="Delete" data-toggle="modal" onclick="javascript: fnDeleteInvoiceTaxDetail(this, ' + full.PurchaseInvoiceDetTaxId + ')"><span class="fa fa-trash-alt"></span></button>' +
                            '</div>';
                    }
                },
                { "data": "PurchaseInvoiceDetTaxId", "name": "PurchaseInvoiceDetTaxId", "visible": false },
                { "data": "PurchaseInvoiceDetId", "name": "PurchaseInvoiceDetId", "visible": false },
                { "data": "SrNo", "name": "SrNo" },
                { "data": "TaxLedgerName", "name": "TaxLedgerName" },
                { "data": "TaxPercentageOrAmount", "name": "TaxPercentageOrAmount" },
                { "data": "TaxPerOrAmountFc", "name": "TaxPerOrAmountFc", render: $.fn.dataTable.render.number(',', '.', 4, '') },
                { "data": "TaxAddOrDeduct", "name": "TaxAddOrDeduct" },
                { "data": "TaxAmountFc", "name": "TaxAmountFc", render: $.fn.dataTable.render.number(',', '.', 4, '')},
                { "data": "Remark", "name": "Remark" }
            ],
        });
    });

    // add invoice tax detail.
    $('#add-new-invoice-taxdetl').click(function () {
        var model = { purchaseInvoiceDetId: '@ViewBag.PurchaseInvoiceDetId' };
        AjaxCommunication.CreateRequest(this.window, 'Get', '@Url.Action("AddInvoiceTaxDetail", "PurchaseInvoiceTaxDetail")', 'html', model,
        function (data) {
            $('#modal-invoice-detail').empty();
            $('#modal-invoice-detail').html(data).modal('show');
            return false;
        }, null, true, null, false);
    });

     // edit invoice tax detail.
    function fnEditInvoiceTaxDetail(purchaseInvoiceDetTaxId) {
        var model = { purchaseInvoiceDetTaxId: purchaseInvoiceDetTaxId };
        AjaxCommunication.CreateRequest(this.window, 'Get', '@Url.Action("EditInvoiceTaxDetail", "PurchaseInvoiceTaxDetail")', 'html', model,
        function (data) {
            $('#modal-invoice-detail').empty();
            $('#modal-invoice-detail').html(data).modal('show');
            return false;
        }, null, true, null, false);
    }
</script>
@{ await Html.RenderPartialAsync("_ConfirmDeleteInvoiceTaxDetail"); }
