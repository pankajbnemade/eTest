<div class="modal fade" id="modalConfirmDebitNoteTaxDetail" role="dialog" data-backdrop="static" data-keyboard="true" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title classh4">Confirm Delete</div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="delete-debitnote-tax-detail">Delete</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    // remove element button click.
    var _debitNoteDetTaxId = null;
    function fnDeleteDebitNoteTaxDetail(element, debitNoteDetTaxId) {
        _debitNoteDetTaxId = debitNoteDetTaxId;
        $(element).attr("data-target", "#modalConfirmDebitNoteTaxDetail");

        $('#modalConfirmDebitNoteTaxDetail').on('show.bs.modal', function (e) {
            // Pass form reference to modal for submission on yes/ok
            var form = $(e.relatedTarget).closest('form');
            $(this).find('.modal-footer #modalConfirmDebitNoteTaxDetail').data('form', form);
        });
    }

    // form confirm (yes/ok) handler, submits form
    $('#modalConfirmDebitNoteTaxDetail').find('.modal-footer #delete-debitnote-tax-detail').on('click', function () {
        var model = { debitNoteDetTaxId: debitNoteDetTaxId };
        AjaxCommunication.CreateRequest(this.window, 'Post', '@Url.Action("DeleteDebitNoteTaxDetail", "DebitNoteTaxDetail")', '', model,
        function (data) {
            if (data.Result.Status) {
                $('#modalConfirmDebitNoteTaxDetail').modal('hide');
                $('#debitNoteTaxDetailGrid').DataTable().ajax.reload();
                fnSuccessNotify('Record deleted.');
            }
            else {
                fnDangerNotify('Error occured while processing request.');
            }
        }, null, true, null, false);
    });

</script>
