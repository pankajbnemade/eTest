                                    <option value="">Select</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.BillToAddressId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.PartyReferenceNo, new { @class = "required" })
                                @Html.TextBoxFor(model => model.PartyReferenceNo, new { @class = "form-control form-control-sm" })
                                @Html.ValidationMessageFor(model => model.PartyReferenceNo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.PartyReferenceDate, new { @class = "required" })
                                @Html.TextBoxFor(model => model.PartyReferenceDate, "{0:dd/MMM/yyyy}", new { @class = "form-control form-control-sm", @placeholder = "DD/MMM/YYYY" })
                                @Html.ValidationMessageFor(model => model.PartyReferenceDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.OurReferenceNo, new { @class = "required" })
                                @Html.TextBoxFor(model => model.OurReferenceNo, new { @class = "form-control form-control-sm" })
