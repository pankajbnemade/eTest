@model CreditNoteModel

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            @if (Model.CreditNoteId > 0)
            {
                <h4 class="modal-title">Edit Credit Note</h4>
            }
            else
            {
                <h4 class="modal-title">Add Credit Note</h4>
            }
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form id="frmCreditNoteMaster" class="width100" method="post"
              asp-action="SaveCreditNoteMaster" asp-controller="CreditNote" asp-area="Accounts"
