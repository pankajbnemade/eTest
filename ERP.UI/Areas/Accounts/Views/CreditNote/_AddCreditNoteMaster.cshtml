                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.OurReferenceDate, new { @class = "required" })
                                @Html.TextBoxFor(model => model.OurReferenceDate, "{0:dd/MMM/yyyy}", new { @class = "form-control form-control-sm", @placeholder = "DD/MMM/YYYY" })
                                @Html.ValidationMessageFor(model => model.OurReferenceDate, "", new { @class = "text-danger" })
