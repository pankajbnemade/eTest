@{
    ViewBag.Title = "Country List";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Country List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <button class="btn btn-primary btn-block" type="button" id="add-new-country">
                            <i class="fas fa-plus"></i> New
                        </button>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="countryGrid" class="table table-bordered table-striped w-100">
                            <thead>
                                <tr class="table-header">
                                    @*<th>Country Id</th>*@
                                    <th>Action</th>
                                    <th>Country Name</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
$(document).ready(function () {
    $("#countryGrid").DataTable({

        //dom: 'lftip',
        "pageLength": 10,
        "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
        "bPaginate": true,
        //"bInfo": true,
        //"bRetrieve": true,
        //"bFilter": true,
        //"iDisplayLength": 5,
        //"bSort": true,
        //"aaSorting": [],
        //"order": [],
        //scrollY: "50vh",
        //scrollCollapse: true,

        "ajax": {
            "url": "@Url.Action("GetCountryList", "Country")",
            "type": "POST",
            "datatype": "json",
        },
        "columns": [
        /*{ "data": "CountryId", "name": "Country Id" },*/

            {
                "render": function (data, type, full, meta) {
                    return '<div class="action_button">' +
                        '<button type="button" class="border-0 rounded-0 text-success" onclick="javascript: fnEditCountry(' + full.CountryId + ')"><span class="fa fa-pencil-alt"></span></button>' +
                        '<button type="button" class="border-0 rounded-0 text-danger" data-toggle="modal" onclick="javascript: fnDeleteCountry(this, ' + full.CountryId + ')"><span class="fa fa-trash-alt"></span></button>' +
                        '</div>';
                }, "orderable": false
            },
            { "data": "CountryName", "name": "Country Name" }
        ],
    });
});

// add new record.
$('#add-new-country').click(function () {
    AjaxCommunication.CreateRequest(this.window, 'Get', '@Url.Action("AddCountry", "Country")', 'html', '',
    function (data) {
        $('#modal-country-master').empty();
        $('#modal-country-master').html(data).modal('show');
        return false;
    }, null, true, null, false);
});

// edit country
    function fnEditCountry(countryId) {
        var model = { countryId: countryId };
        AjaxCommunication.CreateRequest(this.window, 'Get', '@Url.Action("EditCountry", "Country")', 'html', model,
        function (data) {
            $('#modal-country-master').empty();
            $('#modal-country-master').html(data).modal('show');
            return false;
        }, null, true, null, false);
    }
</script>

@{ await Html.RenderPartialAsync("_ConfirmDeleteCountry"); }
<div id="modal-country-master" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="true"></div>
